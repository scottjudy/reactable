{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Shiny": true
  },
  "plugins": ["react", "jsx-a11y"],
  "rules": {
    "jsx-a11y/no-onchange": "off"
  }
}
